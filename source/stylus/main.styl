@font-face
  font-family 'Bowler-Regular'
  src url('../fonts/Bowler-Regular.woff'), url('../fonts/Bowler-Regular.woff2')
  font-display swap

@font-face
  font-family 'Coolvetica-Regular'
  src url('../fonts/Coolvetica-Regular.woff'), url('../fonts/Coolvetica-Regular.woff2')
  font-display swap


@import 'common/variables'
@import 'common/*'
@import 'components/*'

body
  margin 0 auto
  font-size 18px
  font-family 'Coolvetica-Regular'
  font-weight 400
  line-height 120%
  color $color-white

.layout
  width 100%
  height 100%
  margin 0 auto
  display flex
  flex-direction column
  overflow-x hidden
.main
  flex 1

.wrapper
  max-width 320px
  margin 0 auto
  padding 0 6px
  width 100%
  +above($breakpoints.sm)
    max-width 750px
    padding 0 12px
  +above($breakpoints.md)
    max-width 996px
    padding 0 15px
  +above($breakpoints.xxl)
    padding 0 20px
    max-width 1220px

.wrapper-reasons
  max-width 350px
  margin 0 auto
  padding 0 6px
  width 100%
  +above($breakpoints.sm)
    max-width 800px
    padding 0 12px
  +above($breakpoints.md)
    max-width 1076px
    padding 0 15px
  +above($breakpoints.xxl)
    padding 0 20px
    max-width 1320px

.wrapper-start
  max-width 350px
  margin 0 auto
  padding 0 6px
  width 100%
  +above($breakpoints.sm)
    max-width 800px
    padding 0 12px
  +above($breakpoints.md)
    max-width 1076px
    padding 0 15px
  +above($breakpoints.xxl)
    padding 0 20px
    max-width 1360px

.wrapper-steps
  max-width 370px
  margin 0 auto
  width 100%
  +above($breakpoints.sm)
    max-width 830px
