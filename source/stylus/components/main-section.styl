.main-section
  background-image: url('../images/main-section-bg.jpg')
  background-repeat: no-repeat
  background-size: cover
  background-position: center
  background-color #131313

  &__container
    position relative
    z-index 1
    padding 20px 0
    text-align: center
    +above($breakpoints.sm)
      text-align: start
      padding 30px 0
    +above($breakpoints.md)
      padding 50px 0
    +above($breakpoints.xxl)
      padding 73px 0 74px

  &__box,
  &__form,
  &__block
    border-radius: 15px
    +above($breakpoints.sm)
      border-radius: 25px
    +above($breakpoints.md)
      border-radius: 30px
    +above($breakpoints.xxl)
      border-radius: 35px

  &__box
    position relative
    z-index 1
    width 100%
    backdrop-filter: blur(35px);
    background: linear-gradient(180deg, rgba(215, 56, 87, 0.4) 0%, rgba(251, 112, 51, 0.4) 51%, rgba(17, 204, 178, 0.4) 100%);
    display: flex
    flex-direction: column
    align-items: center
    gap: 15px
    padding 20px 5px
    +above($breakpoints.sm)
      align-items: flex-start
      width 520px
      gap: 20px
      padding 30px 5px 30px 25px
    +above($breakpoints.md)
      width 700px
      gap: 25px
      padding 40px 5px 40px 35px
    +above($breakpoints.xxl)
      width 854px
      gap: 30px
      padding 50px 5px 51px 45px
    &:before
      content: ""
      position: absolute
      background: linear-gradient(162deg, #11ccb2 0%, #fb7033 50.5%, #d73857 100%);
      box-shadow: inset 0 -1px 8px 0 rgba(255, 255, 255, 0.55), 17px 15px 15px 0 rgba(0, 0, 0, 0.25);
      border-radius: 50%
      width: 19px;
      height: 19px;
      top: 8px;
      left: -11px;
      +above($breakpoints.sm)
        width 22px
        height: 22px
        top: 13px;
        left: -13px;
      +above($breakpoints.md)
        top: 24px
        left: -13px
      +above($breakpoints.xxl)
        top: 24px
        left: -13px
    &:after
      content: ""
      position: absolute
      background: linear-gradient(162deg, #11ccb2 0%, #fb7033 50.5%, #d73857 100%);
      filter: blur(2px);
      border-radius: 50%
      width: 30px;
      height: 30px;
      bottom: -12px;
      right: -9px;
      +above($breakpoints.sm)
        filter: blur(5px);
        width: 50px;
        height: 50px;
        bottom: -20px;
        right: -23px;
      +above($breakpoints.md)
        width: 60px;
        height: 60px;
        bottom: -24px;
        right: -25px;
      +above($breakpoints.xxl)
        width 71px
        height: 71px
        bottom: -33px
        right: -31px

  &__sub-title
    display: flex
    align-items: center
    gap: 5px
    +above($breakpoints.sm)
      gap: 10px
    +above($breakpoints.md)
      gap: 15px
    +above($breakpoints.xxl)
      gap: 20px

  &__icon
    flex-shrink: 0
    width 30px
    height: auto
    +above($breakpoints.sm)
      width 45px
    +above($breakpoints.md)
      width 58px
    +above($breakpoints.xxl)
      width 64px

  &__bottom
    display: flex
    flex-direction: column-reverse
    align-items: center
    gap: 10px
    margin-top 25px
    +above($breakpoints.sm)
      flex-direction: row
      margin-top 15px
    +above($breakpoints.md)
      gap: 15px
      margin-top 20px
    +above($breakpoints.xxl)
      gap: 20px
      margin-top 26px

  &__form
    width 100%
    backdrop-filter: blur(35px);
    background: linear-gradient(0deg, rgba(215, 56, 87, 0.15) 0%, rgba(251, 112, 51, 0.15) 51%, rgba(17, 204, 178, 0.15) 100%);
    display: flex
    flex-direction: column
    align-items: center
    gap: 5px
    padding 15px 14px
    +above($breakpoints.sm)
      padding 20px 15px
      width 270px
    +above($breakpoints.md)
      padding 30px 20px
      width 300px
    +above($breakpoints.xxl)
      padding 35px 25px 36px
      width 330px

  &__agree-wrapper
    margin-top 5px
    +above($breakpoints.sm)
      margin-top 10px

  &__block
    width 100%
    position relative
    padding 15px 10px
    backdrop-filter: blur(35px);
    background: linear-gradient(0deg, rgba(215, 56, 87, 0.15) 0%, rgba(251, 112, 51, 0.15) 51%, rgba(17, 204, 178, 0.15) 100%);
    +above($breakpoints.sm)
      display: flex
      align-items: flex-end
      padding 5px 5px 15px 20px
      width: 155px;
      height: 243px;
    +above($breakpoints.md)
      padding 5px 5px 20px 30px
      width 200px
      height: 298px
    +above($breakpoints.xxl)
      padding 5px 5px 27px 38px
      width 236px
      height: 344px

  &__block-img
    position: absolute
    width: 55px;
    height: auto;
    top: -21px;
    left: -22px;
    +above($breakpoints.sm)
      width 120px
      top: 17px
      left: 0
    +above($breakpoints.md)
      width 150px
      top: 22px
    +above($breakpoints.xxl)
      width 176px
      top: 28px
