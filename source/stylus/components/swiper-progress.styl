.button-prev,
.button-next
  display: none
  +above($breakpoints.sm)
    display: block
    position: absolute
    z-index 1
    border-radius: 50%
    transition transform 0.3s, top 0.8s
  &:hover
    transform: scale(1.1)
  &:active
      transform: translateY(3px)
  img
    +above($breakpoints.sm)
      box-shadow: 0 0 15px 0 #f34449;
      border-radius: 50%
      width 39px
      height: 39px
    +above($breakpoints.md)
      width 49px
      height: 49px
    +above($breakpoints.xxl)
      width 59px
      height: 59px

.button-prev
  +above($breakpoints.sm)
    top: 170px
    left: 7px
  +above($breakpoints.md)
    top: 240px
    left: 4px
  +above($breakpoints.xxl)
    top: 287px
    left: 39px

.button-next
  +above($breakpoints.sm)
    top: 170px
    right: 7px
  +above($breakpoints.md)
    top: 240px
    right: 4px
  +above($breakpoints.xxl)
    top: 287px
    right: 39px
  img
    +above($breakpoints.sm)
      transform: rotate(180deg)

