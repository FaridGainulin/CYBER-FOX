.bullet-pagination
  display: flex
  flex-direction: row
  justify-content center
  align-items: center
  margin 15px 0
  +above($breakpoints.sm)
    display: none
  &--left
    justify-content start
  &--right
    justify-content flex-end

  .swiper-pagination-bullet
    background-color $color-bullet
    width: 10px
    height: 10px
    border-radius: 50%
    opacity: 1
    position relative
  .swiper-pagination-bullet-active
    transform: scale(1.5)
    transition transform 0.8s
    background: linear-gradient(162deg, #11ccb2 0%, #fb7033 50.5%, #d73857 100%);

.desktop-pagination
  display: flex
  flex-direction: row
  justify-content center
  align-items: center
  margin 15px 0
  +above($breakpoints.sm)
    display: none
  &--left
    justify-content start
  &--right
