.footer
  background-color: #2B2B2B

  &__container
    display: flex
    align-items: center
    flex-direction: column
    gap: 10px
    padding 15px 0
    +above($breakpoints.sm)
      flex-direction: row
      justify-content space-between
      padding 25px 0
    +above($breakpoints.md)
      padding 30px 0
    +above($breakpoints.xxl)
      padding 33px 0 37px

  &__brand-block
    +above($breakpoints.sm)
      display: flex
      align-items: center
      gap: 10px
    +above($breakpoints.sm)
      gap: 15px
    +above($breakpoints.xxl)
      gap: 20px

  &__logo
    width 100px
    height: auto
    +above($breakpoints.sm)
      width 120px
    +above($breakpoints.md)
      width 140px
    +above($breakpoints.xxl)
      width 168px

  &__line
    +above($breakpoints.sm)
      width 1px
      height: 40px
      background-color #0DE5CC
      transform: rotate(20deg)
    +above($breakpoints.md)
      height: 45px
    +above($breakpoints.xxl)
      height: 50px

  &__brand
    display: none
    +above($breakpoints.sm)
      display: block
      color: #E8EAEE

  &__privacy
    cursor pointer
    text-decoration: underline
    color: #E8EAEE
    +above($breakpoints.sm)
      display: none
