.input
  height: 40px
  width 100%
  padding: 0 30px;
  font-family: 'Coolvetica-Regular'
  font-weight: 400
  font-size: 14px;
  line-height: 110%
  color: #444444
  border: 1px solid #fff
  border-radius: 50px;
  background: #fff
  position relative
  overflow hidden
  transition border-color 0.3s, box-shadow 0.3s, border 0.3s, background 0.3s

  &:hover
    border 1px solid #D73857
  &:focus
    color: #1E2019
    caret-color: #D73857
    border 1px solid #D73857
    box-shadow: 3px 3px 10px 0px #D73857
    &::placeholder
      color: #444444
  &::placeholder
    color: #444444
  +above($breakpoints.sm)
    padding: 0 15px;
    font-size: 14px;
    height: 50px
  +above($breakpoints.md)
    padding: 0 23px;
    font-size: 16px;
    height: 60px
  +above($breakpoints.xxl)
    padding: 0 30px;
    font-size: 18px;
    height: 70px
  &.error
    border 1px solid $color-error
    color: $color-error
    caret-color: $color-error
    box-shadow: 0px 0px 22px 0px $color-error
    &::placeholder
      color: $color-error
    &::-ms-input-placeholder
      color: $color-error
    animation: shake 0.6s;
    @keyframes shake
      10%, 90%
        transform: translate3d(-1px, 0, 0)
      20%, 80%
        transform: translate3d(2px, 0, 0)
      30%, 50%, 70%
        transform: translate3d(-4px, 0, 0)
      40%, 60%
        transform: translate3d(4px, 0, 0)

  &--textarea
    outline none
    padding: 10px 10px 10px 30px
    resize: none
    height: 70px
    +above($breakpoints.sm)
      padding: 15px 10px 10px 15px
      height: 100px
    +above($breakpoints.md)
      padding: 17px 10px 10px 23px
      height: 120px;
    +above($breakpoints.xxl)
      padding: 27px 10px 10px 30px
      height: 140px

  &--brown
    border: 1px solid #55342E
